<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".ui.EditorFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_bold"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?attr/borderlessButtonStyle"
                app:icon="@drawable/ic_format_bold_black_24dp"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                android:padding="0dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button.Icon"
                />
        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_header"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?attr/borderlessButtonStyle"
                app:icon="@drawable/ic_title_black_24dp"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                android:padding="0dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button.Icon"
                />
        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_strikethrough"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?attr/borderlessButtonStyle"
                app:icon="@drawable/ic_strikethrough_black_24dp"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                android:padding="0dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button.Icon"
                />
        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="?attr/borderlessButtonStyle"
                app:icon="@drawable/ic_image_black_24dp"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                android:padding="0dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:shapeAppearanceOverlay="@style/Widget.MaterialComponents.Button.Icon"
                />
    </LinearLayout>

    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webview"/>

</LinearLayout>